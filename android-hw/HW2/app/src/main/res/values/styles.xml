<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorShadowWhite</item>
    </style>

    <style name="Element">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ComplexInfo" parent="Element">

    </style>

    <style name="ComplexInfo.Value">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

    <style name="ComplexInfo.Description">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NextDays" parent="Element">

    </style>

    <style name="NextDays.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>